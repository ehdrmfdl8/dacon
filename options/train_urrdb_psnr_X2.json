{
  "task": "urrdbx2_optimize_hp" //
  , "model": "plain" // "plain" | "gan"
  , "gpu_ids": [0]
  , "scale": 1
  , "sigma": [0, 25]
  , "n_channels": 3 // 1 for grayscale image restoration, 3 for color image restoration

  , "merge_bn": false
  , "merge_bn_startpoint": 300000

  , "datasets": {
    "train": {
      "name": "train_dataset"
      , "dataset_type": "plain"
      , "dataroot_H": "trainsets/train_label_img/case2/train"
      , "dataroot_L": "trainsets/train_input_img/case2/train"
      , "H_size": 512 // 128 | 192
      , "use_flip": true
      , "use_rot": true
      , "dataloader_shuffle": true
      , "dataloader_num_workers": 8
      , "dataloader_batch_size": 8

      , "Blur": 0.5
      , "ISO_Noise": 0.5
      , "RandomScale": 0.5
      , "RandomGridShuffle": 0.5
      , "Cutout": 0.5
    }
    , "test": {
      "name": "test_dataset"
      , "dataset_type": "plain"
      , "dataroot_H": "trainsets/train_label_img/case2/val"
      , "dataroot_L": "trainsets/train_input_img/case2/val"
    }
  }

  , "path": {
    "root": "urrdb_psnrx2"
    , "pretrained_netG": null
  }

  , "netG": {
    "net_type": "urrdbx2" // "srresnet" | "rrdbnet" | "rcan" | "unet" | "unetplus" | "nonlocalunet"
    , "in_nc": 3
    , "out_nc": 3
    , "nc": 32 // [64, 128, 256, 512] for "unet"
    , "nb": 20
    , "gc": 32
    , "act_mode": "L" // "BR" for BN+ReLU | "R" for ReLU
    , "upsample_mode": "convtranspose" // "pixelshuffle" | "convtranspose" | "upconv"
    , "downsample_mode": "strideconv" // "strideconv" | "avgpool" | "maxpool"

    , "init_type": "orthogonal" // "orthogonal" | "normal" | "uniform" | "xavier_normal" | "xavier_uniform" | "kaiming_normal" | "kaiming_uniform"
    , "init_bn_type": "uniform" // "uniform" | "constant"
    , "init_gain": 0.2
  }

  , "train": {
     "G_lossfn_type": "l1" // "l1" | "l2sum" | "l2" | "ssim"
    , "G_lossfn_weight": 1

    , "F_lossfn_type": "l1"  // "l1" | "l2"
    , "F_lossfn_weight": 1

    , "G_optimizer_type": "adam"
    , "G_optimizer_lr": 2e-4
    , "G_optimizer_wd": 0
    , "G_optimizer_clipgrad": null

    , "G_scheduler_type": "MultiStepLR" // "MultiStepLR" | "CyclicLR"
    , "G_scheduler_milestones": [200000, 400000, 600000, 800000, 1000000]
    , "G_scheduler_gamma": 0.5

    , "G_regularizer_orthstep": null
    , "G_regularizer_clipstep": null

    , "checkpoint_test": 100
    , "checkpoint_save": 100
    , "checkpoint_print": 12
  }
}
